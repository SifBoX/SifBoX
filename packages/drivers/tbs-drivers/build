#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

install_dir=.install #/lib/modules/$(kernel_version)/updates/tbs

#export MAKEFLAGS=-j1

#tar xjvf linux-tbs-drivers.tar.bz2

#cd linux-tbs-drivers

chmod -R +x linux v4l

[ "$TARGET_ARCH" = "i386" ] && sh ./v4l/tbs-x86_r3.sh
[ "$TARGET_ARCH" = "x86_64" ] && sh ./v4l/tbs-x86_64.sh

make DIR=$(kernel_path) 
strip_kmods "$moddir"

make install \
  DESTDIR=$install_dir \
  KERNELRELEASE=$(kernel_version)
